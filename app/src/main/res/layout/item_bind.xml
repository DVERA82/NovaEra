<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivImage2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNameB"
        android:layout_width="266dp"
        android:layout_height="31dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="67dp"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPriceB"
        android:layout_width="105dp"
        android:layout_height="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/credit"
        app:layout_constraintStart_toEndOf="@+id/ivImage2" />

    <TextView
        android:id="@+id/tvLastPriceB"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/ivImage2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="214dp"
        android:layout_height="98dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        android:background="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />

    <TextView
        android:id="@+id/credit"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="224dp"
        android:text="Credit"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivImage2"
        app:layout_constraintTop_toBottomOf="@+id/tvNameB" />

    <TextView
        android:id="@+id/tvCredit"
        android:layout_width="118dp"
        android:layout_height="21dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceB" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="56dp"
        android:layout_height="19dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="4dp"
        android:background="#FF5252"
        android:text="Ahora"
        android:textColor="#0B0B0B"
        app:layout_constraintBottom_toTopOf="@+id/tvPriceB"
        app:layout_constraintStart_toEndOf="@+id/ivImage2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:background="#B2EBF2"
        android:text="Antes"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toEndOf="@+id/ivImage2"
        app:layout_constraintTop_toBottomOf="@+id/tvNameB" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#0097A7"
        android:text="Contactate con Ventas"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>